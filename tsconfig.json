{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "include": ["src", "src/declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}